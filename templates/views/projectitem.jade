extends ../layouts/default

block content
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
		article
			p: a(href='/projects') &larr; back to projects
			hr
			if data.post.image.exists
				.image-wrap: img(data-original='/project/single/'+data.post.image.filename).img-responsive.lazy
			if !data.post
				h2 Invalid Post.
			else
				header
					h1= data.post.title
					h5 Posted 
						if data.post.publishedDate
							| on #{data.post._.publishedDate.format('MMMM Do, YYYY')} 
						if data.post.author
							| by #{data.post.author.name.first}
				.post
					!= data.post.content.full
block js
	<script>
	$('img.lazy').load(function() {var h= $(this).height(); $('.image-wrap').css("height", h); });
	</script>
